{% macro barra_navegacion() %}

	<nav class="navbar navbar-expand-lg">
		<div class="container">
			<a href="{{ url_for('index') }}" class="navbar-brand">
				<img src="{{ url_for('static', filename='IMG/Logo.png') }}" height="50" id="logo">
			</a>

			<div class="navbar-collapse">
				<ul class="navbar-nav">
					<li class="nav-item"><a href="{{ url_for('index') }}" class="nav-link">Inicio</a></li>
				</ul>

				<ul class="navbar-nav">
					<li class="nav-item"><a href="{{ url_for('sobre_nosotros') }}" class="nav-link">Sobre Nosotros</a></li>
				</ul>				

				<ul class="navbar-nav">
					<li class="nav-item"><a href="{{ url_for('medicina') }}" class="nav-link">Medicina</a></li>
				</ul>
					
				<div class="dropdown">
					<button class="btn dropdown-toggle" data-bs-toggle="dropdown">
						Medicos Especializados
					</button>

					<ul class="dropdown-menu">
						<li>
							<h6 class="dropdown-header">Opciones</h6>
						</li>

						{% set especializaciones = ["Nutricion", "Pediatria", "Psicologia", "Cardiologia", "Primeros_Auxilios", "Medicina_General", "Ginecologia_Y_Obstetricia"] %}
						
						{% for i in especializaciones %}

							<li>
								<a class="dropdown-item" href="{{ url_for('especilizacion', nombre_especializacion=i) }}">
									{{ i.replace('_', ' ') }}
								</a>
							</li>		
						{% endfor %}						
					</ul>
				</div>
			</div>

			<a href="https://github.com/Bredalis" target="_blank" class="navbar-brand">
				<img src="{{ url_for('static', filename='IMG/GitHub.png') }}" height="30" title="GitHub">
			</a>
			<a href="https://twitter.com/Bredalis_P" target="_blank" class="navbar-brand">
				<img src="{{ url_for('static', filename='IMG/X.png') }}" height="30" title="X">
			</a>
		</div> 
	</nav>
{% endmacro %}

